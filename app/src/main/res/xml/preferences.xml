<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:title="Application Theme"
        android:summary="Select your favourite application theme."
        android:key="APP_THEME"
        android:defaultValue="1"
        android:entries="@array/appThemeArray"
        android:entryValues="@array/appThemeValues" />

    <ListPreference
        android:title="Syntax Highlighting Theme"
        android:summary="Select your favourite code syntax highlighting theme."
        android:key="CODE_THEME"
        android:defaultValue="default"
        android:entries="@array/codeThemeArray"
        android:entryValues="@array/codeThemeValues" />

    <ListPreference
        android:title="Code Font"
        android:summary="Select your favourite code font."
        android:key="CODE_FONT"
        android:defaultValue="Inconsolata"
        android:entries="@array/codeFontArray"
        android:entryValues="@array/codeFontArray" />

    <CheckBoxPreference android:title="Enable Line Numbers"
        android:defaultValue="true"
        android:summary="Turn on if you want to see the line numbers."
        android:key="LINE_NUMBERS_ENABLED" />

    <CheckBoxPreference android:title="Enable Descriptions"
        android:defaultValue="true"
        android:summary="Turn on if you want to see useful information."
        android:key="ALGO_DESC_ENABLED" />
</PreferenceScreen>